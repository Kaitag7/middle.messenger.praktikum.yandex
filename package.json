{
  "name": "middle.messenger.praktikum.yandex",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "npm run build && node server.js",
    "dev": "vite --open",
    "test": "mocha -r ts-node/register src/*.spec.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx} && stylelint src/**/*.scss",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "lint:css": "stylelint src/**/*.scss --fix"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/jsdom": "^21.1.4",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "chai": "^4.3.10",
    "eslint": "^8.49.0",
    "eslint-config-airbnb": "^19.0.4",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "sass": "^1.66.1",
    "sinon": "^17.0.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "nanoid": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  }
}
